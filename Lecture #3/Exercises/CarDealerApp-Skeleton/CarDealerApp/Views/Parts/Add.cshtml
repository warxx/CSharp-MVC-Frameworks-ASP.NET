@model IEnumerable<CarDealer.Models.ViewModels.AddPartSupplierViewModel>
@{
    ViewBag.Title = "Add Part";
}

<h2>Add Part</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Name", new { @for = "name" })
        @Html.Editor("name", new { htmlAttributes = new { @class = "form-control", id = "name" } })
    </div>
    <div class="form-group">
        @Html.Label("Price: ", new {@for="price"})
        @Html.Editor("price", new {htmlAttributes = new { @id="price", type="number", step=0.1, @class="form-control" }})
    </div>
    <div class="form-group">
        @Html.Label("Supplier: ", new {@for="supplier"})
        @Html.DropDownList("supplierId", new SelectList(Model, "Id", "Name"), new { @class="form-control", id="supplier"})
    </div>
    <div class="form-group">
        @Html.Label("Quantity: ", new {@for="quantity"})
        @Html.Editor("quantity", new { htmlAttributes= new { id="quantity", type="number", Value="1", @class="form-control"}})
    </div>
    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Add" />
    </div>
}