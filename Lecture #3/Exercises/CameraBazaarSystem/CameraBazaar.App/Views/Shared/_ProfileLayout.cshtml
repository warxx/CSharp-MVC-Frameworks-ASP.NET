@using AuthenticationManager = CameraBazaar.App.Security.AuthenticationManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <div class="container">
                <h3>Application Name</h3>
            </div>
            
            <ul class="nav nav-pills nav-stacked">
                <li>@Html.ActionLink("All Cameras", "All", "Cameras")</li>
                <li class="active">@Html.ActionLink("My Profile", "Profile", "Users")</li>
                <li>@Html.ActionLink("Edit My Profile", "Edit", "Users")</li>
                <li>@Html.ActionLink("Add Camera", "Add", "Cameras")</li>
                <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
            </ul>
        </div>
        
        <div class="col-md-9">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Camera Bazaar</p>
                </footer>
            </div>
        </div>
    </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>


