@model LearningSystem.Models.ViewModels.Users.EditUsersVm

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new { htmlAttributes = new { @class="form-control", type="email" }})
    </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-info"/>
        @Html.ActionLink("Cancel", "Profile", "Users", null, new { @class = "btn btn-danger" })
    </div>
}

