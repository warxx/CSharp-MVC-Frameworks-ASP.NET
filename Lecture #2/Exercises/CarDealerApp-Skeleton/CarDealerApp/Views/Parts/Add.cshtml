@model IEnumerable<CarDealer.Models.ViewModels.AddPartSupplierViewModel>
@{
    ViewBag.Title = "Add Part";
}

<h2>Add Part</h2>

<form method="post">
    <div class="form-group">
        <label for="name">Name: </label>
        <input id="name" type="text" name="name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="price">Price: </label>
        <input id="price" type="number" step="0.1" name="price" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="supplier">Supplier: </label>
        <select name="supplierId" id="supplier" class="form-control">
            @foreach (var item in @Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity: </label>
        <input id="quantity" type="number" value="1" name="quantity" class="form-control" />
    </div>
    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Add" />
    </div>
</form>