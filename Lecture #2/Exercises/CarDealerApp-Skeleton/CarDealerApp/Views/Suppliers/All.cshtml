@model IEnumerable<CarDealer.Models.ViewModels.FilterSuppliersViewModel>

@{
    ViewBag.Title = "All Suppliers";
}

<h2>All Suppliers</h2>

<div class="row">
    <div class="col-sm-2">
        <a href="/suppliers/add/" type="button" class="btn btn-info btn-block">New Supplier</a>
    </div>
</div>
<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Number of parts")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartsCount)
            </td>
        </tr>
    }

</table>
