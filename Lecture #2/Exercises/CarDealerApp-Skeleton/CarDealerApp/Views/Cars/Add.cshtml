@model IEnumerable<CarDealer.Models.ViewModels.AddCarPartVm>
@{
    ViewBag.Title = "Add Car";
}

<h2>Add Car</h2>

<form method="post">
    <div class="form-group">
        <label for="make">Make: </label>
        <input id="make" type="text" name="make" class="form-control" />
    </div>
    <div class="form-group">
        <label for="model">Model: </label>
        <input id="model" type="text" name="carModel" class="form-control" />
    </div>
    <div class="form-group">
        <label for="travelledDistance">Travelled Distance: </label>
        <input id="travelledDistance" type="number" step="1" name="travelledDistance" class="form-control" />
    </div>
    <div class="form-group">
        <select name="partsId" class="form-control" multiple size="10">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Add" />
    </div>
</form>