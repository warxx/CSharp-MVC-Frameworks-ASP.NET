@model IEnumerable<CarDealer.Models.ViewModels.CarsMakeViewModel>

@{
    ViewBag.Title = "Cars";
}

<h2>Cars</h2>

<div class="row">
    <div class="col-sm-2">
        <a href="/cars/add" type="button" class="btn btn-info btn-block">Add Car</a>
    </div>
</div>
<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelledDistance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model
    .OrderBy(m=>m.Model).ThenByDescending(td=>td.TravelledDistance)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelledDistance)
            </td>
        </tr>
}

</table>
