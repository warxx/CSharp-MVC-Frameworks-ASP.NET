
@{
    ViewBag.Title = "Add Supplier";
}

<h2>Add Supplier</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Name: ", new {@for = "name"})
        @Html.Editor("name", new { htmlAttributes = new { @class = "form-control", id = "name", type = "text" }})
    </div>

    <div class="form-group">
        @Html.Label("Type: ", new { htmlAttributes = new { @for="isImported", @class="control-label" }})
        <select class="form-control" id="isImported" name="isImporter">
            <option value="false">Local</option>
            <option value="true">Imported</option>
        </select>
    </div>
    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Add Supplier" />
    </div>
}
    

