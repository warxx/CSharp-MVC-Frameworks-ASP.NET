@model CarDealer.Models.ViewModels.EditCustomerViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Customer</h2>

<form method="post">
    <input type="number" hidden="hidden" value="@Model.Id" name="id" />
    <div class="form-group">
        <label for="name">Name: </label>
        <input id="name" type="text" value="@Model.Name" name="name" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="birthDate">Birth date: </label>
        <input id="birthDate" type="date" value="@Model.BirthDate.ToString("yyyy-MM-dd")" name="birthdate" class="form-control"/>
    </div>
    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Edit"/>
    </div>
</form>