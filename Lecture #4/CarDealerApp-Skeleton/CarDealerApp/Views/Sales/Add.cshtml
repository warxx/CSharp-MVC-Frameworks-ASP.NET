@using CarDealerApp.Extensions
@model CarDealer.Models.ViewModels.AddSaleVm
@{
    ViewBag.Title = "Add sale";
}

<h2>Add Sale</h2>

@using (Html.BeginForm("Add","Sales", FormMethod.Post, new { @class = "form-horizontal form", role="form" }))
{
    <div class="form-group">
        @Html.LabelFor(vm=>vm.Customers, new {@for = "customer", @class = "col-lg-1 control-label"})
        <div class="col-sm-11">
            @Html.DropDownListFor(vm => vm.Customers, new SelectList(Model.Customers, "Id", "Name"), new {@class = "form-control", id = "customer"})
        </div>
    </div>
    
    <div class="form-group">
        @Html.Label("Car: ", new {@for = "car", @class = "col-sm-1 control-label"})
        <div class="col-sm-11">
            @Html.DropDownListFor(vm => vm.Cars, Model.Cars.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = $"{c.Make} {c.Model}" }), new { id = "car", @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.Label("Discount: ", new { @for="discount", @class= "col-sm-1 control-label" })
        <div class="col-sm-11">
            @Html.DropDownListFor(vm=>vm.Discounts, Model.Discounts.Select(d => new SelectListItem {Value = d.ToString(), Text = $"{d.ToString()}%"}), new { id="discount", @class="form-control" })
            </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3">
            <input class="btn btn-info" type="submit" value="Submit"/>
        </div>
    </div>

    @*@Html.Image("http://media.esportsedition.com/wp-content/uploads/2016/12/20161206201401_1.jpg", alt: "H1z1");*@
}
